#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "\033[34m Running type check... \033[0m"
if pnpm run check; then
    echo "\033[32m Pre-commit type check passed âœ… \033[0m"
else
    echo "\033[31m Type check failed! Fix the errors and try again. \033[0m"
    exit 1
fi

echo "\033[33m Note: Lint and build checks are skipped in pre-commit to avoid hangs. \033[0m"
echo "\033[33m Please run 'pnpm run lint' and 'pnpm run build' manually before pushing. \033[0m"
